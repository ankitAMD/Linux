#!/bin/bash

echo "ğŸ”§ STEP 1: Create a Kind Cluster with Custom Config"
echo "Command: kind create cluster --name tws-kind-cluster --config=config.yml"
kind create cluster --name tws-kind-cluster --config=config.yml

echo -e "\nğŸ” STEP 2: View Available Contexts in kubeconfig"
kubectl config get-contexts

echo -e "\nğŸ“ STEP 3: Get Cluster Info Using Specific Context"
kubectl cluster-info --context kind-tws-kind-cluster

echo -e "\nğŸ§± STEP 4: Get All Nodes in the Current Cluster"
kubectl get nodes

echo -e "\nğŸ§± STEP 5: Get Nodes with a Specific Context"
kubectl get nodes --context kind-tws-kind-cluster

echo -e "\nğŸ’¡ STEP 6: Check kubectl and Kind Versions"
kubectl version --client
kind version

echo -e "\nğŸ³ STEP 7: View All Running/Stopped Docker Containers"
docker ps -a

echo -e "\nğŸ“‹ STEP 8: List All Kind Clusters Created"
kind get clusters

echo -e "\nâš™ï¸ STEP 9: Show Current kubeconfig Context"
kubectl config current-context

echo -e "\nğŸ“¤ STEP 10: Export kubeconfig for a Specific Cluster"
kind export kubeconfig --name tws-kind-cluster

echo -e "\nğŸ” STEP 11: Re-Verify Contexts After Export"
kubectl config get-contexts

echo -e "\nğŸ“¡ STEP 12: Show Cluster Info Again to Confirm"
kubectl cluster-info --context kind-tws-kind-cluster

echo -e "\nğŸ” STEP 13: Final Check - List Nodes Again"
kubectl get nodes

echo -e "\nâœ… Script Complete. Your Kind cluster is up and connected!"



kind get clusters
